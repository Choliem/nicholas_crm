<div class="min-h-screen bg-slate-100 flex items-center justify-center p-6">
  <div class="max-w-md w-full bg-white rounded-2xl shadow-2xl p-10 border-t-8 border-[#0A2463]">
    <div class="mb-10 text-center">
      <h2 class="text-3xl font-bold text-slate-800">Login CRM</h2>
      <p class="text-slate-400 mt-2 text-sm text-bold uppercase tracking-widest">PT. SMART</p>
    </div>

    <%= form_with url: login_path, local: true, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-bold text-slate-700 mb-2" %>
        <%= f.email_field :email, class: "w-full px-4 py-3 rounded-xl border border-slate-200 focus:ring-2 focus:ring-blue-500 outline-none transition" %>
      </div>
      <div>
        <%= f.label :password, class: "block text-sm font-bold text-slate-700 mb-2" %>
        <%= f.password_field :password, class: "w-full px-4 py-3 rounded-xl border border-slate-200 focus:ring-2 focus:ring-blue-500 outline-none transition" %>
      </div>
      <%= f.submit "Masuk Ke Sistem", class: "w-full py-4 bg-[#0A2463] text-white rounded-xl font-bold hover:bg-blue-800 cursor-pointer shadow-lg transition" %>
    <% end %>

    <div class="mt-8 flex flex-col items-center space-y-4">
      <%= link_to "Belum punya akun? Daftar", signup_path, class: "text-blue-600 font-semibold hover:underline" %>
      <%= link_to root_path, class: "flex items-center gap-2 text-slate-500 hover:text-[#0A2463] transition-colors py-2 px-4 rounded-lg hover:bg-slate-50 font-medium text-sm" do %>
        <span>‚Üê</span> Kembali ke Beranda
      <% end %>
    </div>
  </div>
</div>