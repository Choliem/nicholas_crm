<div class="max-w-2xl mx-auto py-10">
  <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-slate-100">
    <!-- Header Image / Banner -->
    <div class="h-32 bg-gradient-to-r from-[#0A2463] to-blue-600 flex items-center justify-center">
      <span class="text-6xl">ðŸ“¦</span>
    </div>

    <div class="p-8">
      <div class="flex justify-between items-start mb-6">
        <div>
          <h1 class="text-3xl font-extrabold text-slate-900"><%= @product.name %></h1>
          <p class="text-emerald-600 font-bold text-xl mt-1"><%= number_to_currency(@product.price, unit: "Rp ", precision: 0) %></p>
        </div>
        <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide">Active Service</span>
      </div>

      <div class="bg-slate-50 p-6 rounded-xl border border-slate-200 mb-8">
        <h3 class="text-xs font-black text-slate-400 uppercase tracking-widest mb-2">DESKRIPSI LAYANAN</h3>
        <p class="text-slate-700 leading-relaxed"><%= @product.description %></p>
      </div>

      <div class="flex gap-3">
        <%= link_to "Edit Layanan", edit_product_path(@product), class: "flex-1 bg-yellow-500 text-white text-center py-3 rounded-xl font-bold hover:bg-yellow-600 transition shadow-lg shadow-yellow-500/30" %>
        <%= link_to "Kembali", products_path, class: "flex-1 bg-slate-100 text-slate-700 text-center py-3 rounded-xl font-bold hover:bg-slate-200 transition" %>
      </div>
      
      <div class="mt-6 text-center">
        <%= button_to "Hapus Layanan Ini", @product, method: :delete, class: "text-red-400 text-xs font-bold hover:text-red-600", data: { turbo_confirm: "Yakin hapus layanan ini?" } %>
      </div>
    </div>
  </div>
</div>
