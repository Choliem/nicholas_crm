<%= form_with(model: product, class: "space-y-6") do |form| %>
  <% if product.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded-r-lg">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% product.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nama Produk / Layanan", class: "block text-sm font-semibold text-slate-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 shadow-sm transition", placeholder: "Contoh: Dedicated Fiber 100Mbps" %>
  </div>

  <div>
    <%= form.label :description, "Deskripsi", class: "block text-sm font-semibold text-slate-700" %>
    <%= form.text_area :description, rows: 3, class: "mt-1 block w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 shadow-sm transition", placeholder: "Jelaskan detail layanan..." %>
  </div>

  <div>
    <%= form.label :price, "Harga Bulanan (Rp)", class: "block text-sm font-semibold text-slate-700" %>
    <div class="relative mt-1 rounded-md shadow-sm">
      <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
        <span class="text-slate-500 sm:text-sm">Rp</span>
      </div>
      <%= form.text_field :price, class: "block w-full rounded-lg border-slate-300 pl-10 px-4 py-2 focus:border-blue-500 focus:ring-blue-500 sm:text-sm shadow-sm transition", placeholder: "0.00" %>
    </div>
  </div>

  <div class="pt-4">
    <%= form.submit "Simpan Produk", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-lg shadow-sm text-sm font-bold text-white bg-[#0A2463] hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition cursor-pointer" %>
  </div>
<% end %>
