<% if current_user.role == 'user' %>
  <!-- Public Catalog View -->
  <div class="space-y-12">
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-[#0A2463] to-blue-900 rounded-3xl p-10 md:p-16 text-center text-white shadow-2xl relative overflow-hidden">
      <div class="absolute top-0 left-0 w-full h-full bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"></div>
      <div class="relative z-10">
        <h1 class="text-3xl md:text-5xl font-black mb-4 tracking-tight">Solusi Internet Terbaik Untuk Bisnis Anda</h1>
        <p class="text-blue-200 text-lg md:text-xl max-w-2xl mx-auto mb-8">PT. Smart menghadirkan konektivitas stabil, cepat, dan terpercaya untuk mendukung pertumbuhan perusahaan Anda.</p>
        <a href="#katalog" class="inline-block bg-white text-blue-900 px-8 py-3 rounded-full font-bold shadow-lg hover:bg-blue-50 transform hover:-translate-y-1 transition text-lg">Lihat Paket Layanan ðŸ‘‡</a>
      </div>
    </div>

    <!-- Catalog Grid -->
    <div id="katalog" class="space-y-6">
      <h2 class="text-2xl font-bold text-slate-800 text-center border-b pb-4">Katalog Layanan Resmi</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <% @products.each do |product| %>
          <div class="bg-white rounded-2xl shadow-lg border border-slate-100 overflow-hidden hover:shadow-2xl transition duration-300 group">
            <div class="h-3 bg-gradient-to-r from-blue-500 to-cyan-400"></div>
            <div class="p-8 flex flex-col h-full">
              <div class="mb-4">
                 <span class="bg-blue-100 text-blue-700 text-xs font-black uppercase tracking-widest px-3 py-1 rounded-full">INTERNET</span>
              </div>
              <h3 class="text-2xl font-bold text-slate-900 mb-3 group-hover:text-blue-600 transition"><%= product.name %></h3>
              <p class="text-slate-500 mb-6 flex-1"><%= product.description %></p>
              
              <div class="pt-6 border-t border-slate-100 mt-auto">
                 <p class="text-sm text-slate-400 font-semibold mb-1">Mulai dari</p>
                 <div class="flex items-baseline gap-1">
                   <span class="text-3xl font-black text-[#0A2463]">Rp <%= number_to_currency(product.price, unit: "", precision: 0, delimiter: ".") %></span>
                   <span class="text-slate-500 font-medium">/ bulan</span>
                 </div>
                 <button class="w-full mt-6 bg-slate-900 text-white py-3 rounded-xl font-bold hover:bg-blue-600 transition shadow-lg">Hubungi Sales</button>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

<% else %>
  <!-- Internal Admin/Staff View -->
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold text-slate-800 italic">Internal Product Master</h1>
    <% if current_user.role == 'manager' %>
      <%= link_to "Tambah Layanan Baru", new_product_path, class: "bg-blue-600 text-white px-5 py-2 rounded-xl font-bold hover:bg-blue-700 transition shadow-lg" %>
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% @products.each do |product| %>
      <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 hover:shadow-md transition">
        <div class="flex justify-between items-start mb-4">
          <div class="text-blue-600 font-bold text-xs uppercase tracking-widest">Layanan</div>
          <% if current_user.role == 'manager' %>
            <div class="flex gap-2">
               <%= link_to "âœï¸", edit_product_path(product), class: "hover:bg-slate-100 p-1 rounded" %>
               <%= button_to "ðŸ—‘ï¸", product, method: :delete, data: { confirm: "Hapus layanan ini?" }, class: "hover:bg-red-100 p-1 rounded text-red-500" %>
            </div>
          <% end %>
        </div>
        
        <h2 class="text-xl font-bold text-slate-800 mb-2 leading-tight"><%= product.name %></h2>
        <p class="text-slate-500 text-sm mb-4 h-12 overflow-hidden line-clamp-2"><%= product.description %></p>
        
        <div class="pt-4 border-t border-slate-50">
          <span class="text-lg font-extrabold text-slate-900 block">Rp <%= number_with_delimiter(product.price) %></span>
        </div>
      </div>
    <% end %>
  </div>
<% end %>