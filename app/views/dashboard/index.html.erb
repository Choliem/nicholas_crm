<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-3">
      <span class="text-3xl">ðŸ“Š</span>
      <h2 class="text-2xl font-bold text-slate-800">Statistik Penjualan PT. SMART</h2>
    </div>
    <% if current_user.role == 'admin' || current_user.role == 'manager' %>
      <%= link_to "Set Target", new_sales_target_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-bold hover:bg-blue-700 transition" %>
    <% end %>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Target Card -->
    <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex flex-col justify-between">
      <h3 class="text-slate-600 font-medium mb-4">Target Bulanan</h3>
      <div>
        <div class="flex justify-between text-sm font-bold text-slate-600 mb-2">
          <span>Pencapaian: <%= @persentase %>%</span>
          <span>Target: <%= @target_penjualan %> Juta</span>
        </div>
        <div class="bg-slate-100 rounded-full h-4 relative overflow-hidden">
          <div class="bg-gradient-to-r from-blue-400 to-cyan-400 h-full rounded-full transition-all duration-1000 ease-out" style="width: <%= @persentase %>%"></div>
        </div>
        <p class="mt-3 text-slate-500 text-sm font-medium">
          <% if @target_penjualan - @pencapaian_sekarang > 0 %>
            Sisa target: <span class="text-red-500 font-bold"><%= @target_penjualan - @pencapaian_sekarang %> Juta</span> lagi.
          <% else %>
            <span class="text-emerald-500 font-bold">Target Terlampaui! ðŸŽ‰</span>
          <% end %>
        </p>
      </div>
    </div>

    <!-- Status Layanan -->
    <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex-1">
      <h3 class="text-slate-600 font-medium mb-4">Status Layanan</h3>
      <div class="space-y-3">
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-emerald-500"></span>
          <span class="text-slate-600">Aktif: <span class="font-bold text-slate-900"><%= @layanan_aktif %></span></span>
        </div>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-amber-400"></span>
          <span class="text-slate-600">Pending: <span class="font-bold text-slate-900"><%= @layanan_pending %></span></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activities -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
     <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100">
        <h3 class="text-slate-800 font-bold mb-4 flex items-center gap-2">
          <span>ðŸ”¥</span> Prospek Terbaru
        </h3>
        <div class="space-y-4">
          <% @recent_leads.each do |lead| %>
            <div class="flex items-center justify-between border-b border-slate-50 pb-3 last:border-0 last:pb-0">
               <div>
                 <div class="font-bold text-slate-700 text-sm"><%= lead.name %></div>
                 <div class="text-xs text-slate-400"><%= time_ago_in_words(lead.created_at) %> ago</div>
               </div>
               <span class="text-xs font-bold px-2 py-1 rounded bg-slate-100 text-slate-500"><%= lead.status %></span>
            </div>
          <% end %>
        </div>
     </div>

     <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100">
        <h3 class="text-slate-800 font-bold mb-4 flex items-center gap-2">
          <span>ðŸš€</span> Project Terbaru
        </h3>
        <div class="space-y-4">
          <% @recent_projects.each do |proj| %>
            <div class="flex items-center justify-between border-b border-slate-50 pb-3 last:border-0 last:pb-0">
               <div>
                 <div class="font-bold text-slate-700 text-sm"><%= proj.lead.name %></div>
                 <div class="text-xs text-blue-500"><%= proj.svc_code %></div>
               </div>
               <div class="text-right">
                 <span class="block text-xs font-bold px-2 py-1 rounded <%= proj.status == 'Approved' ? 'bg-green-100 text-green-700' : 'bg-yellow-100 text-yellow-700' %>">
                   <%= proj.status %>
                 </span>
               </div>
            </div>
          <% end %>
        </div>
     </div>
  </div>
</div>