<%= form_with(model: lead, class: "space-y-6") do |form| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :name, class: "block text-sm font-semibold text-slate-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 shadow-sm" %>
    </div>

    <div>
      <%= form.label :email, class: "block text-sm font-semibold text-slate-700" %>
      <%= form.email_field :email, class: "mt-1 block w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 shadow-sm" %>
    </div>

    <div>
      <%= form.label :phone, class: "block text-sm font-semibold text-slate-700" %>
      <%= form.text_field :phone, class: "mt-1 block w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 shadow-sm" %>
    </div>

    <div>
      <%= form.label :status, "Status Prospek", class: "block text-sm font-semibold text-slate-700" %>
      <%= form.select :status, ['New', 'Contacted', 'Qualified', 'Lost'], {}, class: "mt-1 block w-full px-4 py-2 border border-slate-300 rounded-lg bg-white shadow-sm" %>
    </div>
  </div>

  <div>
    <%= form.label :address, class: "block text-sm font-semibold text-slate-700" %>
    <%= form.text_area :address, rows: 3, class: "mt-1 block w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 shadow-sm" %>
  </div>

  <div class="flex items-center justify-end space-x-3 pt-6 border-t">
    <%= link_to "Batal", leads_path, class: "text-slate-600 hover:text-slate-800 font-medium" %>
    <%= form.submit "Simpan Data Lead", class: "px-6 py-2 bg-[#0A2463] text-white font-bold rounded-lg hover:bg-blue-800 shadow-md cursor-pointer transition" %>
  </div>
<% end %>