<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-slate-800">Manajemen Prospek (Leads)</h1>
  <%= link_to "Tambah Lead Baru", new_lead_path, class: "bg-[#0A2463] text-white px-4 py-2 rounded-lg font-bold hover:bg-blue-800 transition" %>
</div>

<div class="overflow-x-auto bg-white rounded-xl shadow-sm border">
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <div class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-blue-600">
    <div class="text-xs font-bold text-slate-400 uppercase tracking-wider">Total Leads</div>
    <div class="text-3xl font-bold text-slate-800 mt-1"><%= @total_leads %></div>
  </div>

  <div class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-yellow-500">
    <div class="text-xs font-bold text-slate-400 uppercase tracking-wider">Pending Projects</div>
    <div class="text-3xl font-bold text-slate-800 mt-1"><%= @pending_projects %></div>
  </div>

  <div class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-green-500">
    <div class="text-xs font-bold text-slate-400 uppercase tracking-wider">Total Revenue (Approved)</div>
    <div class="text-2xl font-bold text-slate-800 mt-1">Rp <%= number_to_human(@total_revenue) %></div>
  </div>
</div>
  <table class="min-w-full">
    <thead>
      <tr class="bg-slate-50 text-slate-500 text-xs uppercase tracking-wider border-b">
        <th class="py-4 px-6 text-left">Nama Pelanggan</th>
        <th class="py-4 px-6 text-left">Kontak</th>
        <th class="py-4 px-6 text-center">Status</th>
        <th class="py-4 px-6 text-center">Lokasi</th>
        <th class="py-4 px-6 text-right">Aksi</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-slate-100">
      <% @leads.each do |lead| %>
        <tr class="hover:bg-slate-50 transition">
          <td class="py-4 px-6">
            <div class="font-bold text-slate-800"><%= lead.name %></div>
            <div class="text-xs text-slate-400"><%= lead.address %></div>
          </td>
          <td class="py-4 px-6 text-sm">
            <div><%= lead.email %></div>
            <div class="text-blue-600"><%= lead.phone %></div>
          </td>
          <td class="py-4 px-6 text-center">
            <span class="px-2 py-1 rounded-full text-[10px] font-bold uppercase bg-blue-100 text-blue-700">
              <%= lead.status %>
            </span>
          </td>
          <td class="py-4 px-6 text-center">
            <%= link_to "https://www.google.com/maps?q=#{lead.lat},#{lead.long}", target: "_blank", class: "text-red-500 hover:text-red-700" do %>
              üìç Map
            <% end %>
          </td>
          <td class="py-4 px-6 text-right space-x-2">
            <%= link_to "Edit", edit_lead_path(lead), class: "text-slate-400 hover:text-blue-600 text-sm" %>
            <%= link_to "Show", lead, class: "text-slate-400 hover:text-blue-600 text-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>