<div class="min-h-screen flex items-center justify-center bg-slate-50 py-12 px-4">
  <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-2xl shadow-xl border border-slate-100">
    <div>
      <h2 class="text-center text-3xl font-extrabold text-[#0A2463]">
        Daftar Akun Baru
      </h2>
      <p class="mt-2 text-center text-sm text-slate-500">
        Bergabung dengan sistem internal PT. SMART
      </p>
    </div>

    <%= form_with(model: @user, local: true, class: "mt-8 space-y-6") do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :name, "Nama Lengkap", class: "block text-sm font-medium text-slate-700" %>
          <%= f.text_field :name, required: true, class: "mt-1 block w-full px-3 py-2 bg-slate-50 border border-slate-300 rounded-lg text-sm shadow-sm placeholder-slate-400 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :username, "Username", class: "block text-sm font-medium text-slate-700" %>
          <%= f.text_field :username, required: true, class: "mt-1 block w-full px-3 py-2 bg-slate-50 border border-slate-300 rounded-lg text-sm shadow-sm focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :role, "Posisi / Role", class: "block text-sm font-medium text-slate-700" %>
          <%= f.select :role, [['Manager', 'manager'], ['Staff Marketing', 'marketing'], ['Admin', 'admin']], {}, class: "mt-1 block w-full px-3 py-2 bg-slate-50 border border-slate-300 rounded-lg text-sm focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-sm font-medium text-slate-700" %>
          <%= f.password_field :password, required: true, class: "mt-1 block w-full px-3 py-2 bg-slate-50 border border-slate-300 rounded-lg text-sm shadow-sm focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Konfirmasi Password", class: "block text-sm font-medium text-slate-700" %>
          <%= f.password_field :password_confirmation, required: true, class: "mt-1 block w-full px-3 py-2 bg-slate-50 border border-slate-300 rounded-lg text-sm shadow-sm focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500" %>
        </div>
      </div>

      <div>
        <%= f.submit "Buat Akun Sekarang", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-bold text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors cursor-pointer" %>
      </div>

      <div class="text-center text-xs text-slate-400">
        Sudah punya akun? <%= link_to "Login di sini", login_path, class: "text-blue-600 font-bold hover:underline" %>
      </div>
    <% end %>
  </div>
</div>